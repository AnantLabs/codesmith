<% } %>
<% foreach(Member member in Entity.MembersNoRowVersion) { %>
                item.<%= member.PropertyName %> = <%if(!member.HasByteArrayColumn()) { %>reader.<%= member.GetReaderMethod() %>("<%= member.ColumnName %>");<% } else { %>ADOHelper.GetBytes(reader);<% } %>
<% } %>
            }
            
            return item;
        }

