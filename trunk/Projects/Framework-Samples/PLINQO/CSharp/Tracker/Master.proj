<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Project="$(MSBuildExtensionsPath)\MSBuildCommunityTasks\MSBuild.Community.Tasks.Targets"/>

	<PropertyGroup>
		<Major>4</Major>
		<Minor>0</Minor>
		<Build>0</Build>
		<Revision>1</Revision>
		<BuildConfiguration>Release</BuildConfiguration>
	</PropertyGroup>

	<ItemGroup>
		<SvnExclude Include="**\.svn\**" />

		<DefaultExclude Include="@(SvnExclude)" />
		<DefaultExclude Include="**\obj\**" />
		<DefaultExclude Include="**\bin\**" />
		<DefaultExclude Include="**\_ReSharper*\**" />
		<DefaultExclude Include="*.zip" />
		<DefaultExclude Include="**\Zip\**" />
		<DefaultExclude Include="*.suo" />
		<DefaultExclude Include="**\*.user" />
		<DefaultExclude Include="**\*.resharper" />
		<DefaultExclude Include="**\*.cache" />
		<DefaultExclude Include="*.teamcity.*" />

		<ZipFiles Include="**\*.*" Exclude="@(DefaultExclude)" />
	</ItemGroup>

	<Target Name="Build">
		<CallTarget Targets="Clean;Compile;Zip;Nightly"/>
	</Target>

	<Target Name="Compile" DependsOnTargets="Version">
		<MSBuild Projects="Tracker.sln" Properties="Configuration=$(BuildConfiguration);" />
	</Target>

	<Target Name="Clean">
		<DeleteTree Directories="Source\**\obj\**;Source\**\bin\**" />
		<RemoveDir Directories="Zip\" ContinueOnError="true"/>
	</Target>

	<Target Name="Zip" DependsOnTargets="Version">
		<Zip Files="@(ZipFiles)"
			ZipFileName="Zip\plinqo.tracker-r$(Revision).zip" />	
	</Target>

	<Target Name="Nightly" DependsOnTargets="Zip;DeployValue">
		<Copy SourceFiles="Zip\plinqo.tracker-r$(Revision).zip"
			DestinationFiles="$(DeployFolder)\plinqo.tracker-r$(Revision).zip" />
	</Target>


	<Target Name="Version">
		<SvnVersion LocalPath="$(MSBuildProjectDirectory)">
			<Output TaskParameter="Revision" PropertyName="Revision" />
		</SvnVersion>

		<Message Text="Revision: $(Revision)"/>
    
		<Time>
			<Output TaskParameter="Month" PropertyName="Month" />
			<Output TaskParameter="Day" PropertyName="Day" />
			<Output TaskParameter="Year" PropertyName="Year" />
		</Time>

		<AssemblyInfo CodeLanguage="CS"
			OutputFile="$(MSBuildProjectDirectory)\Source\GlobalAssemblyInfo.cs"
			AssemblyCompany="CodeSmith Tools, LLC"
			AssemblyProduct="PLINQO Tracker Sample"
			AssemblyCopyright="Copyright (c) 2002-$(Year) CodeSmith Tools, LLC.  All rights reserved."
			AssemblyConfiguration="$(BuildConfiguration)"
			AssemblyVersion="$(Major).$(BindMinor).$(BindBuild).$(BindRevision)"	
			AssemblyFileVersion="$(Major).$(Minor).$(Build).$(Revision)"
			AssemblyInformationalVersion="$(Major).$(Minor).$(Build).$(Revision)"
			GenerateClass="true" />

	</Target>

	<Target Name="DeployValue">
		<RegistryRead KeyName="HKEY_LOCAL_MACHINE\SOFTWARE\CodeSmith" ValueName="DeployFolder">
			<Output TaskParameter="Value" PropertyName="DeployFolder" />
		</RegistryRead>
	</Target>

</Project>
