<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="enyim.com">
      <section name="memcached" type="Enyim.Caching.Configuration.MemcachedClientSection, Enyim.Caching" />
    </sectionGroup>
    <section name="cacheManager" type="CodeSmith.Data.Caching.CacheManagerSection, CodeSmith.Data" />
  </configSections>

  <enyim.com>
    <memcached>
      <servers>
        <add address="127.0.0.1" port="11200" />
      </servers>
      <socketPool minPoolSize="10" maxPoolSize="100" connectionTimeout="00:00:10" deadTimeout="00:02:00" />
    </memcached>
  </enyim.com>

  <cacheManager defaultProvider="MemcachedProvider" defaultProfile="Short">
    <profiles>
      <add name="Short" description="short cache" duration="0:5:0" />
      <add name="Long" description="long cache" duration="1:0:0" />
    </profiles>

    <providers>
      <add name="MemcachedProvider" description="MemcachedProvider"
           type="CodeSmith.Data.Memcached.MemcachedProvider, CodeSmith.Data.Memcached" />
    </providers>
  </cacheManager>

  <connectionStrings>
    <add name="TrackerConnectionString" connectionString="data source=.;Integrated Security=SSPI;Database=Tracker;Application Name=Tracker" providerName="System.Data.SqlClient"/>
  </connectionStrings>
</configuration>