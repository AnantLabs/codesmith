        [RunLocal]
        public <%= Entity.ClassName %>List Create()
        {
            var item = (<%= Entity.ClassName %>List)Activator.CreateInstance(typeof(<%= Entity.ClassName %>List), true);
            CheckRules(item);
            MarkNew(item);
<% if(IsChildBusinessObject) { %>
            MarkAsChild(item);
<%}%>
            return item;
        }

        #endregion
